program Project1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

type

    IntegerArray = array[1..3] of integer;
    StringArray = array[1..3] of String;
var
    nomes  : StringArray;
    idades : IntegerArray;

begin
  try

  for var i := 0 to 3 do
    begin
      WriteLn('Insira seu nome');
      ReadLn(nomes[i]);
      WriteLn('Insira sua idade');
      ReadLn(idades[i]);
    end;

    for var i := 0 to 3 do
    begin
      WriteLn(format('%s tem %d anos.', [nomes[i], idades[i] ]));
    end;


    ReadLn;

  except
    on E: Exception do
      Writeln(E.ClassName, ': ', E.Message);
  end;
end.
